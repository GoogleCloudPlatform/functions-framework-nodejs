{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [{
    "description": "Create a PR whenever there is a new major version",
    "matchUpdateTypes": ["major"]
  }],
  "patch": {
    "enabled": false
  },
  "minor": {
    "enabled": false
  },
  "ignorePaths": [
    "docs/**",
    "experimental/**"
  ],
  "pinVersions": false,
  "schedule": [
    "every 3 months on the first day of the month"
  ]
}
