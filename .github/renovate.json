{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "ignorePaths": [
    "docs/**",
    "experimental/**"
  ],
  "pinVersions": false,
  "schedule": [
    "every 3 months on the first day of the month"
  ]
}
